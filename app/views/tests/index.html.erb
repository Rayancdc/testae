<div class="banner">
  <div class="banner-content">
    <% if user_signed_in? %>


      <h1>Welcome!</h1>
      <%= link_to "Create Test", new_test_path, class: "btn btn-primary" %>

  </div>
</div>
<div class="container">
  <div class="row">
    <% @tests.each do |test| %>
      <div class="col-sm-6 col-md-4 col-lg-3">
        <div class="test-card">
          <h1 class="test-card-title text-center">Test</h1>
          <div class="test-card-content">
            <p><strong>Price-per-review: </strong><%= test.review_price_cents %></p>
            <p><strong>Price-per-review: </strong><%= test.issue_price_cents %></p>
            <div class="test-card-description">
              <p><%= test.description %></p>
            </div>
          </div>
          <%= link_to "Learn more", test_path(test), class: "btn btn-primary test-card-button" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
    <% else %>
      <div class="container">
        <h2>Log in</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true %>
            <%= f.input :password, required: false %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
  </div>
</div>
    <% end%>


