<div class="container">
	<div class="row">
		<div class="col-md-6 offset-md-3">
		  <h3 class="text-center mt-5">Crie uma nova review</h3>
		  <%= simple_form_for [@test, @review] do |f| %>
			  <%= f.association :user %>
			  <%= f.input :user_agent %>
			  <%= f.input :issue_description %>
			  <%= f.input :issue_score %>
			  <%= f.input :image %> 
			  <%= f.button :submit, class: "btn btn-primary" %>
			<% end %>
			
		</div>
	</div>
</div>

