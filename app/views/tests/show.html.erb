<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h3>Descrição do Teste:</h3>
        <div class="card">
          <div class="card-body">
            <p><%= @test.description %></p>
            <strong>Ganhe R$<%= @test.review_price_cents/100 %> por review</strong>
            <br>
            <strong>Ganhe R$<%= @test.issue_price_cents/100 %> por bug encontrado</strong>
          </div>
        </div>
        <h3>Faça sua review e já comece a receber!</h3>
    </div>
  </div>
  <div class="list-inline">
    <%= link_to "Ir para o website", @test.website, class: "btn btn-primary" %>
    <%= link_to "Incluir Review", new_test_review_path(@test), class: "btn btn-primary" %>
  </div>
</div>

