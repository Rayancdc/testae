

<h1>My tests</h1>


<div class="container">
  <div class="row">
    <% @tests.each do |test| %>

      <div class="col-sm-6 col-md-4 col-lg-3">
        <div class="test-card">
          <h2 class="test-card-title text-center"><%= test.company%></h2>
          <div class="test-card-content">
            <p><strong>Price-per-review: </strong><%= test.review_price_cents %></p>
            <p><strong>Price-per-review: </strong><%= test.issue_price_cents %></p>
            <div class="test-card-description">
              <p><%= test.description %></p>
            </div>
          </div>
          <%= link_to "Learn more", test_path(test), class: "btn btn-primary test-card-button" %>
        </div>
      </div>

    <% end %>
  </div>
</div>
